<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/CompletedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="19dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_group_b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    android:textColor="#5A5A5A"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/tvScld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivered_on"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/tv_Schedule_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tvScld"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_Schedule_date_time"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/tvmember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drop"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/TvseeProfile"
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/ic_backword_arrow"
                    android:gravity="center" />
            </RelativeLayout>

            <com.sa.souqbinadriver.view.AppTextView
                android:id="@+id/tv_drop_address"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:gravity="right"
                android:textColor="#5A5A5A"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>