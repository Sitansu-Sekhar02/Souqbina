<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_lighter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_lighter"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_group_no_order" />


        <com.sa.souqbinadriver.view.AppTextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/no_ongoing_order"
            android:textColor="#C9C9C9"
            android:textSize="20dp">

        </com.sa.souqbinadriver.view.AppTextView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@+id/scldDate"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.sa.souqbinadriver.view.AppTextView
                    android:id="@+id/orderDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_group_orders"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="@string/order_desc"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:text="@string/help"
                    android:textAllCaps="true"
                    android:textColor="@color/orange"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orderDesc"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/pipe" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp">

                        <com.sa.souqbinadriver.view.AppTextView
                            android:id="@+id/con_name"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="@string/orderDesc"
                            android:textColor="@color/textGrayColor"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/con_name"
                            android:layout_marginTop="@dimen/_5sdp">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvMobl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivered_on"
                                android:textColor="@color/black"
                                android:textSize="14dp" />

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_toRightOf="@id/tvMobl"
                                android:text="@string/scld_date"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:id="@+id/TvseeProfile"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/ic_path_363"
                            android:gravity="center" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/picDloc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_below="@id/button"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/ImgA"
                        android:layout_width="19dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_group_a" />

                    <RelativeLayout
                        android:id="@+id/AdPick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/ImgA">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvmember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/pickup"
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="188dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/address"
                                android:textColor="#171717"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_direction" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="2dp"
                        android:layout_height="52dp"
                        android:layout_below="@+id/ImgA"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/line" />

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/ImgB"
                        android:layout_width="19dp"
                        android:layout_height="23dp"
                        android:layout_below="@id/viewLine"
                        android:src="@drawable/ic_group_b" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/AdPick"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/ImgB">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/drop"
                                android:textColor="#000000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="188dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/address"
                                android:textColor="#171717"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_direction" />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/venderDesc"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/picDloc"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/vender_details"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/vender_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/mask_group_details" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:id="@+id/vender_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvScld"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/construction_name"
                                android:textColor="#000000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vender_name"
                            android:layout_marginTop="5dp">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvVendorPhn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/mobile"
                                android:textColor="#5A5A5A" />

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@id/tvVendorPhn"
                                android:singleLine="true"
                                android:text="+971 9811212121"
                                android:textColor="#2C2B2B" />

                        </RelativeLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_call"
                            android:gravity="center" />


                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customerDetails"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/venderDesc"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/customer_details"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/rectangle_image" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:id="@+id/cos_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/construction_name"
                                android:textColor="#000000"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cos_name"
                            android:layout_marginTop="5dp">

                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvCusMobl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/mobile"
                                android:textColor="#5A5A5A" />

                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@id/tvCusMobl"
                                android:singleLine="true"
                                android:text="+971 9811212121"
                                android:textColor="#2C2B2B" />

                        </RelativeLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_call"
                            android:gravity="center" />


                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_below="@id/customerDetails"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/status"
                            android:textColor="#A8A8A8"
                            android:textSize="12dp" />

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/ic_baseline_dot"
                            android:drawablePadding="5dp"
                            android:text="@string/order_picked"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="17dp"
                        android:text="@string/update_status"
                        android:textAllCaps="true"
                        android:textColor="#FFC200"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>