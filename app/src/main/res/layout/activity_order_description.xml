<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_group_no_order">

        </ImageView>
        <com.sa.souqbinadriver.view.AppTextView
            android:layout_marginTop="32dp"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#C9C9C9"
            android:text="@string/no_ongoing_order">

        </com.sa.souqbinadriver.view.AppTextView>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_below="@+id/scldDate"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">
            <com.sa.souqbinadriver.view.AppTextView
                android:id="@+id/orderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_desc"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_group_orders"
                android:drawablePadding="8dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#000000"/>
            <com.sa.souqbinadriver.view.AppTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/help"
                android:textAllCaps="true"
                android:textSize="12dp"
                android:textColor="#FFC200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderDesc"
                android:orientation="horizontal">

                <com.github.siyamed.shapeimageview.ShapeImageView
                    android:id="@+id/profile_image"
                    android:layout_width="58dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/pipe"
                    android:layout_height="58dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/con_name"
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="@string/orderDesc"
                        android:textColor="#5A5A5A"
                        android:textSize="14dp" />

                <RelativeLayout
                    android:layout_below="@id/con_name"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tvMobl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivered_on"
                        android:textSize="14dp"
                        android:textColor="#000000" />
                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tvMobl"
                        android:layout_marginLeft="3dp"
                        android:text="@string/scld_date"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </RelativeLayout>

                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/TvseeProfile"
                        android:layout_width="7dp"
                        android:gravity="center"
                        android:layout_height="11dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/ic_path_363"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"/>



            </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
            <LinearLayout
                android:id="@+id/picDloc"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_below="@id/button"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/ImgA"
                        android:layout_width="19dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_group_a"  />

                <RelativeLayout
                    android:id="@+id/AdPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/ImgA">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sa.souqbinadriver.view.AppTextView
                            android:id="@+id/tvmember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pickup"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:textSize="12dp" />
                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_marginTop="5dp"
                            android:layout_width="188dp"
                            android:textSize="12dp"
                            android:textColor="#171717"
                            android:layout_height="wrap_content"
                            android:text="@string/address"/>

                    </LinearLayout>

                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/ic_group_direction"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="2dp"
                        android:layout_height="52dp"
                        android:layout_below="@+id/ImgA"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/line" />

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/ImgB"
                        android:layout_width="19dp"
                        android:layout_height="23dp"
                        android:layout_below="@id/viewLine"
                        android:src="@drawable/ic_group_b" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/AdPick"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/ImgB">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/drop"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="12dp" />
                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_marginTop="5dp"
                                android:layout_width="188dp"
                                android:textSize="12dp"
                                android:textColor="#171717"
                                android:layout_height="wrap_content"
                                android:text="@string/address"/>

                        </LinearLayout>
                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_direction"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/venderDesc"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/picDloc"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vender_details"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:id="@+id/vender_image"
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/mask_group_details"
                        android:layout_height="45dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:id="@+id/vender_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvScld"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/construction_name"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_below="@id/vender_name"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvVendorPhn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile"
                                android:textColor="#5A5A5A"
                                android:singleLine="true"/>
                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tvVendorPhn"
                                android:layout_marginLeft="3dp"
                                android:text="+971 9811212121"
                                android:textColor="#2C2B2B"
                                android:singleLine="true"/>

                        </RelativeLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="32dp"
                            android:gravity="center"
                            android:layout_height="32dp"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_call"
                            android:layout_alignParentRight="true"/>



                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customerDetails"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/venderDesc"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.sa.souqbinadriver.view.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_details"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.ShapeImageView
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/rectangle_image"
                        android:layout_height="45dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:id="@+id/cos_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/construction_name"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_below="@id/cos_name"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                            <com.sa.souqbinadriver.view.AppTextView
                                android:id="@+id/tvCusMobl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile"
                                android:textColor="#5A5A5A"
                                android:singleLine="true"/>
                            <com.sa.souqbinadriver.view.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tvCusMobl"
                                android:layout_marginLeft="3dp"
                                android:text="+971 9811212121"
                                android:textColor="#2C2B2B"
                                android:singleLine="true"/>

                        </RelativeLayout>

                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="32dp"
                            android:gravity="center"
                            android:layout_height="32dp"
                            android:layout_marginRight="17dp"
                            android:background="@drawable/ic_group_call"
                            android:layout_alignParentRight="true"/>



                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@id/customerDetails">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textColor="#A8A8A8"
                            android:singleLine="true"
                            android:textSize="12dp" />
                        <com.sa.souqbinadriver.view.AppTextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_baseline_dot"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            android:text="@string/order_picked"/>

                    </LinearLayout>

                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17dp"
                        android:textColor="#FFC200"
                        android:textStyle="bold"
                        android:text="@string/update_status"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>