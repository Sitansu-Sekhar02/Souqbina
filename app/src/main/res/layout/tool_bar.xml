<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <RelativeLayout
        android:id="@+id/rr_header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:tag="dw"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/ic_group_menu"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_group_home"/>

        <com.sa.souqbinadriver.view.AppTextView
            android:id="@+id/tvHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_menu"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/support"
            android:layout_marginRight="@dimen/_40sdp"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_group_cart"
            android:layout_marginRight="@dimen/_40sdp"
            tools:ignore="VectorDrawableCompat" />

        <com.sa.souqbinadriver.view.AppTextView
            android:id="@+id/ivNotification"
            android:layout_toLeftOf="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_notification"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_15sdp" />

        <com.sa.souqbinadriver.view.AppTextView
            android:id="@+id/tvCount"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@drawable/ic_ellipse"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="5dp" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>