<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:background="@drawable/layout_bg">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfimeImage"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:padding="3dp" />

                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tvEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/ic_group_camera" />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="25dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:id="@+id/profileNameDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp"/>

                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tv_firstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/abdul"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_toRightOf="@+id/fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="109dp"
                    android:orientation="vertical">
                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp"/>
                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tv_lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/rehman"/>

                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mblno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_below="@id/profileNameDetails"
                    android:orientation="vertical">
                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp"/>
                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tv_mobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="+971 6545676589"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_below="@id/mblno"
                    android:orientation="vertical">
                    <com.sa.souqbinadriver.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp"/>
                    <com.sa.souqbinadriver.view.AppTextView
                        android:id="@+id/tv_emailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="rehman@example.com"/>

                </LinearLayout>
                <com.sa.souqbinadriver.view.AppButton
                    android:layout_below="@id/email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="96dp"
                    android:text="@string/edit_profile"
                    android:textColor="#2C2B2B"
                    app:backgroundTint="@null"
                    android:background="@drawable/edit_button_bg"/>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>