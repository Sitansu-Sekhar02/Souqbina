<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:elevation="4dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_back"
            android:id="@+id/tool_bar_back_icon"
            android:layout_gravity="left"/>

        <com.sa.souqbinadriver.view.AppTextView_Title
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/MediumText"
            android:layout_toRightOf="@+id/tool_bar_back_icon"
            android:textStyle="bold"
            android:visibility="visible"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/support"
            android:layout_marginRight="@dimen/_40sdp"
            tools:ignore="VectorDrawableCompat" />
        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_group_cart"
            android:layout_marginRight="@dimen/_40sdp"
            tools:ignore="VectorDrawableCompat" />

        <com.sa.souqbinadriver.view.AppTextView
            android:id="@+id/ivNotification"
            android:layout_toLeftOf="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_notification"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_15sdp" />

        <com.sa.souqbinadriver.view.AppTextView
            android:id="@+id/tvCount"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@drawable/ic_ellipse"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="5dp" />

    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>